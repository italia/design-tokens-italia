{
	"source": [
	  "tokens/*.json"
	],
	"platforms": {
	  "scss": {
		"transforms": ["attribute/cti", "name/cti/kebab", "font/family", "font/weight", "spacing/px", "shadow/type"],
		"prefix": "dsi-",
		"buildPath": "scss/",
		"files": [{
		  "destination": "dsi-tokens.scss",
		  "format": "scss/variables",
		  "options": {
			"outputReferences": true,
			"themeable" : false
		  }
		}],
		"basePxFontSize": 16
	  },
	  "css": {
		"transforms": ["attribute/cti", "name/cti/kebab", "font/family", "font/weight", "spacing/px", "shadow/type"],
		"prefix": "dsi-",
		"buildPath": "css/",
		"files": [{
			"destination": "dsi-tokens.css",
			"format": "css/variables",
			"options": {
				"outputReferences": true
			}
	  }],
		"basePxFontSize": 16
	  }
	}
}

