{
  "source": [
    "tokens/*.json"
  ],
  "platforms": {
    "scss": {
      "transforms": [
        "attribute/cti",
        "color/rgba-or-hex-to-hsla",
        "name/kebab",
        "font/family",
        "spacing/px",
        "shadow/type"
      ],
      "prefix": "it",
      "buildPath": "scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "scss/variables",
          "options": {
            "outputReferences": true,
            "themeable": false
          }
        }
      ],
      "basePxFontSize": 16
    },
    "css": {
      "transforms": [
        "attribute/cti",
        "color/rgba-or-hex-to-hsla",
        "name/kebab",
        "font/family",
        "spacing/px",
        "shadow/type"
      ],
      "prefix": "it",
      "buildPath": "css/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true,
            "themeable": false
          }
        }
      ],
      "basePxFontSize": 16
    }
  }
}